{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  description: "Automated dependency updates for podcheck",
  extends: [
    "config:recommended",
    "docker:enableMajor",
    "replacements:k8s-registry-move",
    ":automergePr",
    ":automergePatch",
    ":automergeDigest",
    ":disableRateLimiting",
    ":dependencyDashboard",
    ":semanticCommits",
    ":timezone(Europe/London)",
    "github>sudo-kraken/podcheck//.github/renovate/labels.json5",
    "github>sudo-kraken/podcheck//.github/renovate/devcontainers.json5",
    "github>sudo-kraken/podcheck//.github/renovate/semantic_commits.json5",
    "github>sudo-kraken/podcheck//.github/renovate/shell.json5",
  ],
  dependencyDashboardTitle: "Renovate Dashboard ðŸ¤–",
  suppressNotifications: ["prEditedNotification", "prIgnoreNotification"],
  rebaseWhen: "conflicted",
  prConcurrentLimit: 5,
  labels: ["dependencies"],
  minimumReleaseAge: "7 days",

  lockFileMaintenance: {
    enabled: true,
    schedule: ["after 9pm on sunday"],
    automerge: true,
    branchTopic: "lock-file-maintenance"
  },  

  packageRules: [
    {
      matchManagers: ["github-actions"],
      minimumReleaseAge: null
    }
  ]
}
